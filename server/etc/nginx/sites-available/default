# Ana domain için HTTP'den HTTPS'e yönlendirme
server {
    listen 80;
    server_name eth-node-map.xyz;

    # Tüm HTTP isteklerini HTTPS'e yönlendir
    return 301 https://$host$request_uri;
}

# Ana domain için HTTPS ayarları
server {
    listen 443 ssl;
    server_name eth-node-map.xyz;

    ssl_certificate /etc/letsencrypt/live/eth-node-map.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/eth-node-map.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /var/www/html/web; # Web dosyalarının konumu
    index index.html;       # Ana sayfa dosyası

    set $mobile_rewrite $is_mobile;

    location / {
        if ($mobile_rewrite) {
            return 403; # 403 Forbidden status code
        }
        try_files $uri $uri/ =404;
    }

    location /graph.html {
        if ($mobile_rewrite) {
            return 403; # 403 Forbidden status code
        }
        try_files /graph.html =404;
    }  

    error_page 403 /error.html;
    location = /error.html {
        root /var/www/html/web;
        internal;
    }
    
    location /pkg {
        alias /var/www/html/web/pkg;
    }

    location /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location /sitemap.xml {
        allow all;
        log_not_found off;
        access_log off;
    }

    # CSS dosyaları için Expires headers
    location ~* \.css$ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # JS dosyaları için Expires headers
    location ~* \.js$ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # Görüntü dosyaları için Expires headers
    location ~* \.(png|jpg|jpeg|gif|ico)$ {
        expires 1y;
        add_header Cache-Control "public";
    }
}

# Subdomain için HTTP'den HTTPS'e yönlendirme
server {
    listen 80;
    server_name api.eth-node-map.xyz;

    # Tüm HTTP isteklerini HTTPS'e yönlendir
    return 301 https://$host$request_uri;
}

# Subdomain için HTTPS ayarları
server {
    listen 443 ssl;
    server_name api.eth-node-map.xyz;

    ssl_certificate /etc/letsencrypt/live/eth-node-map.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/eth-node-map.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /var/www/html; # Subdomain için kök dizin
    index index.html;   # Ana sayfa dosyası

    location / {
        try_files $uri $uri/ =404; # Dosyaları doğrudan bulamazsa 404 döner
    }

    # CSS dosyaları için Expires headers
    location ~* \.css$ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # JS dosyaları için Expires headers
    location ~* \.js$ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # Görüntü dosyaları için Expires headers
    location ~* \.(png|jpg|jpeg|gif|ico)$ {
        expires 1y;
        add_header Cache-Control "public";
    }

    # API yönlendirmeleri
location /nodes {
        proxy_pass http://127.0.0.1:5001/nodes;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/details/ {
        proxy_pass http://127.0.0.1:5001/nodes/details/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/count {
        proxy_pass http://127.0.0.1:5001/nodes/count;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/ids {
        proxy_pass http://127.0.0.1:5001/nodes/ids;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/os-types {
        proxy_pass http://127.0.0.1:5001/nodes/os-types;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/client-types {
        proxy_pass http://127.0.0.1:5001/nodes/client-types;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/countries {
        proxy_pass http://127.0.0.1:5001/nodes/countries;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/isps {
        proxy_pass http://127.0.0.1:5001/nodes/isps;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/latest {
        proxy_pass http://127.0.0.1:5001/nodes/latest;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /nodes/country/ {
        proxy_pass http://127.0.0.1:5001/nodes/country/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /statistics/os {
        proxy_pass http://127.0.0.1:5001/statistics/os;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /statistics/client {
        proxy_pass http://127.0.0.1:5001/statistics/client;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /statistics/isp {
        proxy_pass http://127.0.0.1:5001/statistics/isp;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /statistics/country {
        proxy_pass http://127.0.0.1:5001/statistics/country;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
